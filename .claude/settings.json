{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "version": "1.0.0",
    "description": "Machine Learning domain profile - CORE (22) + ML (16) = 38 plugins",
    "model": "claude-opus-4-6-20250116",
    "thinking": { "enabled": true },
    "autoCheckpoint": true,
    "permissionMode": "plan",
    "env": {
        "ENABLE_TOOL_SEARCH": "auto:5",
        "MAX_MCP_OUTPUT_TOKENS": "50000",
        "MAX_THINKING_TOKENS": "31999"
    },
    "sandbox": { "enabled": true, "autoAllowBashIfSandboxed": true },
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "~/dev/claude/infra/claude-governance/hooks/branch-protection.sh",
                        "timeout": 10,
                        "statusMessage": "Running branch protection check..."
                    }
                ]
            }
        ],
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "~/dev/claude/infra/claude-governance/hooks/test-gate.sh",
                        "statusMessage": "Running test gate..."
                    }
                ]
            }
        ]
    },
    "enabledPlugins": {
        "velocity-workflow@velocity-tools": true,
        "commit-commands@claude-plugins-official": true,
        "code-review@claude-plugins-official": true,
        "ralph-loop@claude-plugins-official": true,
        "hookify@claude-plugins-official": true,
        "claude-mem@claude-mem": true,
        "claude-md-management@claude-plugins-official": true,
        "claude-code-setup@claude-plugins-official": true,
        "agent-sdk-dev@claude-plugins-official": true,
        "plugin-dev@claude-plugins-official": true,
        "pr-review-toolkit@claude-plugins-official": true,
        "feature-dev@claude-plugins-official": true,
        "playground@claude-plugins-official": true,
        "pyright-lsp@claude-plugins-official": true,
        "typescript-lsp@claude-plugins-official": true,
        "coding-tutor@claude-plugins-official": true,
        "context7@anthropic-agent-skills": true,
        "context7-enhanced@anthropic-agent-skills": true,
        "devops-automation@claude-plugins-official": true,
        "velocity-workflow@hordago-plugins": true,
        "compound-engineering@compound-engineering": true,
        "planning-with-files@planning-with-files": true,
        "hf-model-hub@huggingface-skills": true,
        "hf-datasets@huggingface-skills": true,
        "hf-transformers@huggingface-skills": true,
        "hf-diffusers@huggingface-skills": true,
        "hf-tokenizers@huggingface-skills": true,
        "hf-accelerate@huggingface-skills": true,
        "hf-evaluate@huggingface-skills": true,
        "hf-peft@huggingface-skills": true,
        "jax-flax-optax-plugin@local": true,
        "aiDevops@local": true,
        "kdense-data-science@hordago-plugins": true,
        "kdense-data-science@kdense-tools": true,
        "data-scientist@composio": true,
        "software-optimization-plugin@local": true,
        "karpathy-workflows@local": true,
        "ml-engineer@hordago-plugins": true
    },
    "permissions": {
        "allow": [
            "Bash(python3:*)",
            "Bash(python:*)",
            "Bash(pip:*)",
            "Bash(uv:*)",
            "Bash(uvx:*)",
            "Bash(pytest:*)",
            "Bash(ruff:*)",
            "Bash(mypy:*)",
            "Bash(black:*)",
            "Bash(conda:*)",
            "Bash(mamba:*)",
            "Bash(git:*)",
            "Bash(gh:*)",
            "Bash(docker:*)",
            "Bash(docker-compose:*)",
            "Bash(nvidia-smi:*)",
            "Bash(torchrun:*)",
            "Bash(accelerate:*)",
            "Bash(wandb:*)",
            "Bash(tensorboard:*)",
            "Bash(curl:*)",
            "Bash(wget:*)",
            "Bash(jq:*)",
            "Bash(yq:*)",
            "Bash(ls:*)",
            "Bash(tree:*)",
            "Bash(wc:*)",
            "Bash(diff:*)",
            "Bash(sort:*)",
            "Bash(uniq:*)",
            "Bash(mkdir:*)",
            "Bash(cp:*)",
            "Bash(mv:*)",
            "Bash(rm:*)",
            "Bash(touch:*)",
            "Bash(chmod:*)",
            "Bash(cat:*)",
            "Bash(head:*)",
            "Bash(tail:*)",
            "Bash(date:*)",
            "Bash(env:*)",
            "Bash(which:*)",
            "Bash(pwd:*)",
            "Bash(make:*)",
            "Bash(find:*)",
            "Read(*)",
            "Write(src/**)",
            "Write(tests/**)",
            "Write(docs/**)",
            "Write(.github/**)",
            "Write(scripts/**)",
            "Write(configs/**)",
            "Write(models/**)",
            "Write(data/**)",
            "Write(notebooks/**)",
            "Write(*.md)",
            "Write(*.yml)",
            "Write(*.yaml)",
            "Write(*.json)",
            "Write(*.toml)",
            "Write(*.py)",
            "Write(Dockerfile*)",
            "Write(.gitignore)",
            "Edit(src/**)",
            "Edit(tests/**)",
            "Edit(docs/**)",
            "Edit(.github/**)",
            "Edit(scripts/**)",
            "Edit(configs/**)",
            "Edit(models/**)",
            "Edit(data/**)",
            "Edit(notebooks/**)",
            "Edit(*.md)",
            "Edit(*.yml)",
            "Edit(*.yaml)",
            "Edit(*.json)",
            "Edit(*.toml)",
            "Edit(*.py)",
            "Edit(Dockerfile*)",
            "Edit(.gitignore)",
            "Grep(*)",
            "Glob(*)"
        ],
        "deny": [
            "Bash(rm -rf /:*)",
            "Bash(sudo:*)",
            "Bash(su:*)",
            "Bash(shutdown:*)",
            "Bash(reboot:*)",
            "Bash(git push --force:*)",
            "Bash(git push -f:*)",
            "Bash(dd:*)",
            "Bash(mkfs:*)",
            "Read(.env*)",
            "Read(**/secrets/**)",
            "Read(~/.ssh/**)",
            "Read(~/.aws/**)",
            "Read(~/.config/gcloud/**)",
            "Read(**/*credentials*)",
            "Read(**/*token*)",
            "Write(.env*)",
            "Edit(.env*)",
            "Write(~/.ssh/**)",
            "Write(~/.aws/**)"
        ]
    }
}
